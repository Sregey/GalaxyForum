@model ForumPlMvc.Models.AddEditCommentModel

@{
    ViewBag.Title = "Edit Comment";
}

<h2>Edit Comment</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.TopicId)

        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control simple-size" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsAnswer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*<div class="checkbox">*@
                    @Html.CheckBoxFor(model => model.IsAnswer)
                    @Html.ValidationMessageFor(model => model.IsAnswer, "", new { @class = "text-danger" })
                @*</div>*@
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-offset-2 col-sm-1">
                    <input type="submit" value="Accept" name="EditComment:Accept" class="btn btn-default" />
                </div>
                <div class="col-sm-offset-1 col-sm-1">
                    <input type="submit" value="Reject" name="EditComment:Reject" class="btn btn-default" />
                </div>
                <div class="col-sm-offset-1 col-sm-1">
                    <input type="submit" value="Delete" name="EditComment:Delete" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
