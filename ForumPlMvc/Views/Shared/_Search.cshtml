@model ForumPlMvc.Models.TopicSearchModel
@using (Html.BeginForm("TopicsInSection", "Home", FormMethod.Get))
{
    @Html.HiddenFor(model => model.Id)

    <div class="row">
        <div class="col-xs-6">
            @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", style = "max-width:100%" } })
            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
        </div>

        <div class="col-xs-1">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
}
