<div style="text-align:center;">
    <ul class="pagination">
        @if (ViewBag.Page == 1)
        {
            <li class="disabled">
                <span>«</span>
            </li>
        }
        else
        {
            <li>
                @Html.ActionLink("«", null, new { page = ViewBag.Page - 1 })
            </li>
        }

        @for (int i = 1; i <= ViewBag.PageCount; i++)
        {
            if (i == ViewBag.Page)
            {
                <li class="active">
                    <span>@i</span>
                </li>
            }
            else
            {
                <li>
                    @Html.ActionLink(i.ToString(), null, new { page = i })
                </li>
            }
        }

        @if (ViewBag.Page == ViewBag.PageCount)
        {
            <li class="disabled">
                <span>»</span>
            </li>
        }
        else
        {
            <li>
                @Html.ActionLink("»", null, routeValues: new { page = ViewBag.Page + 1 })
            </li>
        }
    </ul>
</div>